<script>
  // Lazy load Google Maps
  function initMap() {
    const mapContainer = document.getElementById('map-container');
    if (!mapContainer) return;

    const lat = parseFloat(mapContainer.dataset.lat || '-37.800433');
    const lng = parseFloat(mapContainer.dataset.lng || '144.899252');

    // Create map
    const map = new window.google.maps.Map(mapContainer, {
      zoom: 18,
      center: { lat, lng },
      mapTypeId: 'roadmap',
      scrollwheel: true,
      draggable: true,
      styles: [
        {
          featureType: 'all',
          elementType: 'labels.text.fill',
          stylers: [{ color: '#333333' }]
        },
        {
          featureType: 'water',
          elementType: 'geometry',
          stylers: [{ color: '#729177' }]
        }
      ]
    });

    // Add marker
    new window.google.maps.Marker({
      position: { lat, lng },
      map: map,
      title: 'Top Dentists Footscray',
      animation: window.google.maps.Animation.DROP
    });
  }

  // Load Google Maps script when map container is clicked
  let mapLoaded = false;
  const mapContainer = document.getElementById('map-container');
  
  if (mapContainer) {
    mapContainer.addEventListener('click', function() {
      if (!mapLoaded) {
        mapLoaded = true;
        
        // Check if API key is available from environment or meta tag
        const metaElement = document.querySelector('meta[name="google-maps-key"]');
        const apiKey = (import.meta.env && import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY) || (metaElement && metaElement.getAttribute('content'));
        
        if (apiKey) {
          const script = document.createElement('script');
          script.src = `https://maps.googleapis.com/maps/api/js?key=${apiKey}&callback=initMap`;
          script.async = true;
          script.defer = true;
          document.head.appendChild(script);
        } else {
          // Fallback: Open Google Maps in new tab
          const lat = mapContainer.dataset.lat || '-37.800433';
          const lng = mapContainer.dataset.lng || '144.899252';
          const mapsUrl = `https://www.google.com/maps?q=${lat},${lng}+(Top+Dentists+Footscray)&z=18`;
          window.open(mapsUrl, '_blank', 'noopener,noreferrer');
        }
      }
    });
  }

  // Intersection Observer for lazy loading
  if ('IntersectionObserver' in window) {
    const mapObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && !mapLoaded) {
          // Preload when map comes into view but don't auto-load
          // User still needs to click to respect privacy and performance
        }
      });
    }, { rootMargin: '100px' });

    if (mapContainer) {
      mapObserver.observe(mapContainer);
    }
  }

  // Make initMap globally available
  window.initMap = initMap;
</script>
