---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Page Not Found | Top Dentists Footscray"
  description="The page you're looking for doesn't exist. Return to Top Dentists Footscray homepage or browse our services."
>
  <section class="min-h-screen flex items-center justify-center bg-background">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-2xl mx-auto space-y-8">
        <!-- 404 Illustration -->
        <div class="mb-8">
          <div class="text-9xl font-bold text-primary-200 select-none">
            404
          </div>
        </div>

        <div class="space-y-6">
          <h1 class="text-h1 font-heading font-bold text-neutral-800">
            Page Not Found
          </h1>
          
          <p class="text-lg text-neutral-600 leading-relaxed max-w-lg mx-auto">
            Sorry, we couldn't find the page you're looking for. The page may have been moved, deleted, or you may have typed the URL incorrectly.
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            href="/"
            class="btn btn-primary"
          >
            Return Home
          </a>
          
          <a
            href="/services"
            class="btn btn-secondary"
          >
            View Services
          </a>
        </div>

        <!-- Quick Links -->
        <div class="pt-8 border-t border-neutral-200">
          <h2 class="text-lg font-semibold text-neutral-800 mb-4">
            Popular Pages
          </h2>
          <div class="flex flex-wrap justify-center gap-4 text-sm">
            <a href="/services" class="text-primary-600 hover:text-primary-700 transition-colors">
              Our Services
            </a>
            <span class="text-neutral-300">•</span>
            <a href="/about-us" class="text-primary-600 hover:text-primary-700 transition-colors">
              About Us
            </a>
            <span class="text-neutral-300">•</span>
            <a href="/dentists" class="text-primary-600 hover:text-primary-700 transition-colors">
              Meet Our Dentists
            </a>
            <span class="text-neutral-300">•</span>
            <a href="/sustainability" class="text-primary-600 hover:text-primary-700 transition-colors">
              Sustainability
            </a>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="bg-white rounded-xl p-8 shadow-lg max-w-md mx-auto">
          <h3 class="text-xl font-semibold text-neutral-800 mb-4">
            Need Help?
          </h3>
          <div class="space-y-3 text-sm">
            <p class="text-neutral-600">
              Call us at
              <a
                href="tel:(03)96875050"
                class="text-primary-600 font-semibold hover:text-primary-700 transition-colors"
              >
                (03) 9687 5050
              </a>
            </p>
            <p class="text-neutral-600">
              Email us at
              <a
                href="mailto:admin@topdentistsfootscray.com.au"
                class="text-primary-600 font-medium hover:text-primary-700 transition-colors break-all"
              >
                admin@topdentistsfootscray.com.au
              </a>
            </p>
            <p class="text-neutral-600">
              Or
              <a
                href="https://apac.dentalhub.online/soe/new/%20?pid=AUTOP01"
                class="text-primary-600 font-semibold hover:text-primary-700 transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                book an appointment online
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>